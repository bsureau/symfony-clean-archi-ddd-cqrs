<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Entity\Task" table="task">
        <id name="id" column="id" type="task_id">
            <generator strategy="NONE"/>
        </id>
        <field name="name" column="name" type="string"/>
        <field name="status" column="status" type="string"/>
        <many-to-one field="todo" target-entity="Todo">
            <join-column name="todo_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>